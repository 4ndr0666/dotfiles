#xhost +SI:localuser:andro
#xhost +SI:localuser:root
# ====================================================================
# Wayfire launch guard
if ! command -v wayfire &> /dev/null; then
    echo "Error: Wayfire command not found. Please ensure Wayfire is installed and in your PATH." >&2
    exit 1
fi
exec wayfire
