## 4ndr0cht

#### Fzf for cheat-sheets in "~/.cheaters/"
cht() {
    local cheats
    cheats=("$HOME/.cheater/"*.md)
    local choice
    choice=$(printf "%s\n" "${cheats[@]}" | fzf --prompt="Select a cheat sheet: ")
    [ -n "$choice" ] && bat --language=mdown "$choice" || echo "No cheat sheet selected."
}

