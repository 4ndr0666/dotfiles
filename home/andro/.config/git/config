[alias]
	set-origin-ssh = remote set-url origin git@github.com:4ndr0666/4ndr0site.git

[advice]
	detachedHead = false

[branch]
	autosetuprebase = always

[core]
	pager = diff-so-fancy | less --no-init --quit-if-one-screen --RAW-CONTROL-CHARS --tabs=4

[diff]
	colorMoved = default
	tool = diffuse

[difftool]
	prompt = false
	trustExitCode = true

[difftool "diffuse"]
	cmd = diffuse "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"

[fetch]
	prune = true

[interactive]
	diffFilter = diff-so-fancy --patch

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[grep]
	lineNumber = true
	patternType = perl

[init]
	defaultBranch = main

[push]
	default = simple 
	autoSetupRemote = true

[rebase]
	autoStash = true

