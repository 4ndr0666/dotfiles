# ==================================================== // CHEATSHEETS //

cht() {
    local cheats=("$HOME/.cheater/"*.md)
    local choice=$(printf "%s\n" "${cheats[@]}" | fzf --prompt="Select a cheat sheet: ")
    [ -n "$choice" ] && bat "$choice" || echo "No cheat sheet selected."
}

